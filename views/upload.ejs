<script>
    const fileInput = document.getElementById('file');
    const fileInfo = document.getElementById('fileInfo');
    const loadingContainer = document.getElementById('loading');
    const fileUrlContainer = document.getElementById('fileUrlContainer');
    const fileUrlInput = document.getElementById('fileUrl');
    const notification = document.getElementById('notification');

    fileInput.addEventListener('change', function() {
      const file = fileInput.files[0];
      if (file) {
        const fileSize = (file.size / 1024 / 1024).toFixed(2); // Convert to MB
        const fileType = file.type.split('/').pop().toUpperCase();
        fileInfo.innerHTML = `<p><strong>Nama File:</strong> ${file.name}</p>
                              <p><strong>Ukuran File:</strong> ${fileSize} MB</p>
                              <p><strong>Tipe File:</strong> ${fileType}</p>`;
      } else {
        fileInfo.innerHTML = '';
      }
    });

    document.getElementById('uploadForm').addEventListener('submit', function(event) {
      event.preventDefault();
      const form = event.target;
      const formData = new FormData(form);

      const xhr = new XMLHttpRequest();
      xhr.open('POST', form.action, true);

      xhr.upload.addEventListener('progress', function(e) {
        if (e.lengthComputable) {
          const percentComplete = (e.loaded / e.total) * 100;
          document.querySelector('.loading-bar').style.width = `${percentComplete}%`;
        }
      });

      xhr.addEventListener('load', function() {
        loadingContainer.style.display = 'none';
        document.querySelector('.loading-bar').style.width = '0';

        const response = JSON.parse(xhr.responseText);
        const fileUrl = response.fileUrl; // Adjust this according to your server response
        fileUrlInput.value = fileUrl;
        fileUrlContainer.style.display = 'flex';
      });

      xhr.addEventListener('error', function() {
        alert('There was an error uploading your file.');
        loadingContainer.style.display = 'none';
        document.querySelector('.loading-bar').style.width = '0';
      });

      xhr.addEventListener('abort', function() {
        alert('The upload has been canceled by the user or the browser dropped the connection.');
        loadingContainer.style.display = 'none';
        document.querySelector('.loading-bar').style.width = '0';
      });

      loadingContainer.style.display = 'flex';
      xhr.send(formData);
    });

    function copyToClipboard() {
      fileUrlInput.select();
      document.execCommand('copy');
      showNotification();
    }

    function showNotification() {
      notification.style.display = 'flex';
      setTimeout(function() {
        notification.style.display = 'none';
      }, 3500); // Matches the animation duration
    }
  </script>
