<!-- Script to dynamically insert data into the table -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tableBody = document.getElementById('aiMenuTable');
        aiMenuData.forEach(data => {
            const row = document.createElement('tr');

            const idCell = document.createElement('td');
            idCell.textContent = data.id;
            row.appendChild(idCell);

            const nameCell = document.createElement('td');
            nameCell.textContent = data.name;
            row.appendChild(nameCell);

            const parameterCell = document.createElement('td');
            parameterCell.textContent = data.parameters;
            row.appendChild(parameterCell);

            const methodCell = document.createElement('td');
            methodCell.innerHTML = `<div class="btn btn-sm-rounded btn-outline-info">${data.method}</div>`;
            row.appendChild(methodCell);

            const statusCell = document.createElement('td');
            statusCell.innerHTML = `<div class="btn btn-sm-rounded btn-outline-success">${data.status}</div>`;
            row.appendChild(statusCell);

            const tryCell = document.createElement('td');
            tryCell.innerHTML = `<a target="_blank" href="${data.tryUrl}" class="btn btn-sm-block btn-primary" rel="nofollow"><i class="fas fa-arrow-up-right-from-square"></i></a>`;
            row.appendChild(tryCell);

            tableBody.appendChild(row);
        });
    });
</script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script>
    $('#shortUrlForm').on('submit', function(e) {
      e.preventDefault();
      const originalUrl = $('#originalUrl').val();
      $.post('/shorturl/shorten', { originalUrl }, function(data) {
        $('#result').html(`
          <div class="alert alert-success" role="alert">
            Short URL: <a href="${data.shortUrl}" target="_blank">${data.shortUrl}</a>
          </div>
        `);
      }).fail(function() {
        $('#result').html(`
          <div class="alert alert-danger" role="alert">
            Failed to shorten URL.
          </div>
        `);
      });
    });
  </script>

